# ============================================================
# Autonomous Flash Loan Trading System - Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control!
# ============================================================

# ======================== BLOCKCHAIN NETWORK ========================
# Ethereum Mainnet RPC URL (Infura or Alchemy - RECOMMENDED)
# Get free key at https://infura.io/ or https://alchemy.com/
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Set to true to install and run local Erigon node
# Recommended: false (use external RPC for faster startup)
# If false, uses ETHEREUM_RPC_URL above
USE_LOCAL_NODE=false

# Optional: Multi-chain support
POLYGON_RPC_URL=https://polygon-rpc.com
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
OPTIMISM_RPC_URL=https://mainnet.optimism.io

# Chain ID (1 = Ethereum Mainnet)
CHAIN_ID=1

# ======================== WALLET CONFIGURATION ========================
# Your trading wallet private key (DO NOT SHARE!)
# For production, use hardware wallet or environment variable
TRADING_WALLET_PRIVATE_KEY=your_private_key_here

# Your trading wallet address
TRADING_WALLET_ADDRESS=0x...

# ======================== AAVE CONFIGURATION ========================
# Aave V3 Pool Address (Ethereum Mainnet)
AAVE_V3_POOL_ADDRESS=0x87870Bca3F3fD6335C3F4ce6260135144110A857
AAVE_PROVIDER_ADDRESS=0x2f39d218133AFaB8F2B819B1066c7E484DD26110

# ======================== DEX CONFIGURATION ========================
# Uniswap V2
UNISWAP_V2_FACTORY_ADDRESS=0x5C69bEe701ef814a2B6ce3c27052E1803338CD17
UNISWAP_V2_ROUTER_ADDRESS=0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D

# Uniswap V3
UNISWAP_V3_FACTORY_ADDRESS=0x1F98431c8aD98523631AE4a59f267346ea31F984
UNISWAP_V3_ROUTER_ADDRESS=0xE592427A0AEce92De3Edee1F18E0157C05861564

# SushiSwap
SUSHISWAP_FACTORY_ADDRESS=0xC0AEe478e3658e2610c5F7A4A2E1777cE9e4f2Ac
SUSHISWAP_ROUTER_ADDRESS=0xd9e1cE17f2641f24aE83637ab66a2cca9C378B9F

# Balancer
BALANCER_V2_VAULT_ADDRESS=0xBA12222222228d8Ba445958a75a0704d566BF2C8

# ======================== TOKEN ADDRESSES ========================
WETH_ADDRESS=0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2
USDC_ADDRESS=0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48
DAI_ADDRESS=0x6B175474E89094C44Da98b954EesadCDEF9ce6CC
WBTC_ADDRESS=0x2260FAC5E5542a773Aa44fBCfeDf7C193bc2C599

# ======================== TRADING CONFIGURATION ========================
# Loan amounts (in USD)
LOAN_AMOUNT_USD=10000
MAX_LOAN_AMOUNT_USD=100000

# Risk management
MAX_POSITION_SIZE_USD=50000
MAX_DAILY_LOSS_USD=10000
MAX_LOSS_PER_TRADE_USD=1000

# Profit thresholds
MIN_PROFIT_THRESHOLD_USD=500

# Trading settings
MAX_CONCURRENT_TRADES=3
TRADING_STRATEGY=balanced

# Supported tokens and exchanges
SUPPORTED_TOKENS=ETH,USDC,DAI,WBTC
SUPPORTED_EXCHANGES=uniswap_v2,uniswap_v3,sushiswap,balancer

# Stop loss / Take profit (percentages)
STOP_LOSS_PERCENTAGE=5
TAKE_PROFIT_PERCENTAGE=10
MAX_DRAWDOWN_PERCENTAGE=15

# ======================== FEATURE FLAGS ========================
GAS_OPTIMIZATION_ENABLED=true
AI_PREDICTIONS_ENABLED=true
PORTFOLIO_REBALANCING_ENABLED=true

# Test mode (set to false for production!)
TEST_MODE=false
SIMULATE_TRADES=false
SIMULATION_CONFIDENCE=0.8

# Emergency pause
EMERGENCY_PAUSE=false

# ======================== API KEYS ========================
# Get free keys:
# - Etherscan: https://etherscan.io/apis
# - CoinGecko: https://www.coingecko.com/en/api
# - Infura: https://infura.io/
# - Alchemy: https://alchemy.com/
ETHERSCAN_API_KEY=your_etherscan_api_key
COINGECKO_API_KEY=your_coingecko_api_key
INFURA_API_KEY=your_infura_api_key
ALCHEMY_API_KEY=your_alchemy_api_key
CHAINLINK_API_KEY=your_chainlink_api_key

# ======================== MONITORING & ALERTS ========================
# Logging
LOG_LEVEL=INFO

# Email alerts
ENABLE_EMAIL_ALERTS=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL=alerts@example.com

# Discord notifications
DISCORD_WEBHOOK_URL=

# Telegram bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Monitoring intervals (seconds)
MONITORING_INTERVAL_SECONDS=30
HEALTH_CHECK_INTERVAL_SECONDS=10
RECOVERY_COOLDOWN_SECONDS=300

# Error handling
MAX_ERRORS_BEFORE_STOP=10
ERROR_TIME_WINDOW_SECONDS=3600
MAX_RETRIES_BEFORE_STOP=3

# ======================== DATABASE ========================
# PostgreSQL (optional)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=flash_loan_trader
POSTGRES_USER=trader
POSTGRES_PASSWORD=your_secure_password

# Redis (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# ======================== PRODUCTION DEPLOYMENT ========================
# Block production network when ready
BLOCKCHAIN_NETWORK=ethereum
