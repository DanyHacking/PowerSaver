# ============================================================
# TESTNET CONFIGURATION
# Copy this file to .env and set TESTNET=true for testing
# NEVER use mainnet private keys on testnet!
# ============================================================

# ======================== NETWORK SELECTION ========================
# Set to true to use testnet (Sepolia)
# Set to false for mainnet production
TESTNET=true

# ======================== TESTNET RPC ========================
# Sepolia testnet RPC (free from Infura/Alchemy)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# ======================== TESTNET CONTRACTS ========================
# Get testnet tokens from faucet: https://sepoliafaucet.com

# Testnet WETH
TEST_WETH_ADDRESS=0x7b79995e5f793A07Bc00C21412e50Ecae098E7f9

# Testnet USDC (Circle)
TEST_USDC_ADDRESS=0xda9d4f9b6ac7d4a1a7d1b4c3e5f8a2d9c8b7a6

# Testnet DAI
TEST_DAI_ADDRESS=0x5912f6616c84024cD1c0C2588fC0F07c8A4F4c8

# Aave V3 Sepolia
TEST_AAVE_POOL_ADDRESS=0x6Ae43D9C1D6d7c7Cc0d3A5cfEEf8A2f8C6E4F2a

# Uniswap V3 Sepolia
TEST_UNISWAP_FACTORY=0x0227628f3F023bb0B980b67D528571c17c2A5F34
TEST_UNISWAP_ROUTER=0xE592427A0AEce92De3Edee1F18E0157C05861564

# Uniswap V2 Sepolia
TEST_UNISWAP_V2_FACTORY=0x7E25D212D7A7B6d79a3D5f5E6B5D8C4A9F2E1D0B
TEST_UNISWAP_V2_ROUTER=0xB4FB5719D2D0fB4C2E50D0F4F1E2D3C4B5A6F7E8

# ======================== TEST WALLET ========================
# Use a TEST wallet with testnet funds
# NEVER use your mainnet wallet!
TEST_TRADING_WALLET_PRIVATE_KEY=your_test_wallet_private_key_here
TEST_TRADING_WALLET_ADDRESS=0x...

# ======================== TEST TRADING PARAMS ========================
# Smaller amounts for testing
TEST_LOAN_AMOUNT=100          # $100 test trades
TEST_MIN_PROFIT=1             # $1 minimum profit
TEST_MAX_SLIPPAGE=0.05        # 5% slippage tolerance
